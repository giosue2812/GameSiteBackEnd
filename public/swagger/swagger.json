{
    "openapi": "3.0.0",
    "info": {
        "title": "Games API Doc",
        "version": "0.1"
    },
    "servers": [
        {
            "url": "http://localhost:8080/Formation/GamesSite/BackEnd/public/api/",
            "description": "API Games DOC"
        }
    ],
    "paths": {
        "/games": {
            "get": {
                "tags": [
                    "Game"
                ],
                "summary": "Get a list of games",
                "operationId": "game",
                "responses": {
                    "404": {
                        "description": "No found games list",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ApiErrorResponseDTO"
                                }
                            }
                        }
                    },
                    "200": {
                        "description": "Return a list of Games",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/GamesListDTO"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "ApiErrorResponseDTO": {
                "title": "ApiErroResponseDTO",
                "description": "Model of error response",
                "properties": {
                    "statusCode": {
                        "description": "Status Error code",
                        "type": "integer"
                    },
                    "message": {
                        "description": "Error message",
                        "type": "string"
                    }
                },
                "type": "object"
            },
            "GamesListDTO": {
                "title": "GameListDTO",
                "description": "Model of games list response",
                "properties": {
                    "id": {
                        "title": "Game ID",
                        "description": "Id of the one game",
                        "type": "integer"
                    },
                    "nom": {
                        "title": "Game name",
                        "description": "Name of the one game",
                        "type": "string"
                    },
                    "image": {
                        "title": "Game image",
                        "description": "Image of the one game",
                        "type": "string"
                    }
                },
                "type": "object"
            }
        }
    }
}